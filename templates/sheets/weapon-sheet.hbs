<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
  </header>
  <p>{{ localize "madness.item.weight" }} : <input name="system.weight" type="text" value="{{system.weight}}" data-dtype="Number"/></p>
  <p>{{ localize "madness.item.magazine" }} : <input name="system.magazine" type="text" value="{{system.magazine}}" data-dtype="Number"/></p>
</form>